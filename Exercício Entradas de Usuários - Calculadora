function menu_operacoes(){
operacao = parseInt(prompt("Digite o número da operação desejada: \n 1 - Soma \n 2 - Subtração \n 3 - Multiplicação \n 4 - Divisão \n 0 - Sair"));
}
menu_operacoes();
if (operacao >=0 && operacao <=4){



do {
operacao = parseInt(prompt("Digite o número da operação desejada: \n 1 - Soma \n 2 - Subtração \n 3 - Multiplicação \n 4 - Divisão \n 0 - Sair"));
} while (operacao >= 0 && operacao <= 4);
