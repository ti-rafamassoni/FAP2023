class Pessoa {
  constructor(nome, idade, filho = null) {
    this.nome = nome;
    this.idade = idade;
    this.filho = filho;
  }
}

// Criando as pessoas
const pessoa1 = new Pessoa("Wagner", 77);
const pessoa2 = new Pessoa("Mirna", 68);
const pessoa3 = new Pessoa("Tiago", 45);
const pessoa4 = new Pessoa("Débora", 44);

// Definindo a relação de pais e filhos
pessoa1.filho = pessoa3;
pessoa2.filho = pessoa4;

// Criando a lista encadeada
pessoa1.next = pessoa2;
pessoa2.next = null;  // Último elemento

// Percorrendo e exibindo a lista encadeada
let current = pessoa1;
while (current !== null) {
  console.log(`Nome: ${current.nome}, Idade: ${current.idade}`);
  if (current.filho) {
    console.log(`  Filho: ${current.filho.nome}`);
  }
  current = current.next;
}





  
    
